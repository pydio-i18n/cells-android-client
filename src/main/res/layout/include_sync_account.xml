<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="syncAccount"
            type="com.pydio.android.cells.db.runtime.RJob" />
    </data>

    <LinearLayout
        android:id="@+id/included_header_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/job_name"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="@dimen/margin_xsmall"
            tools:text="my-image-88639: with a specially long name and some detailed information.jpg" />

        <TextView
            android:id="@+id/job_status"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:jobStatus="@{syncAccount}"
            tools:text="Downloading, please waitâ€¦" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:indeterminate="true"
            android:visibility="visible"
            app:updateJobProgress="@{syncAccount}" />

    </LinearLayout>
</layout>