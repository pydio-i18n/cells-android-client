    <!--        <Preference-->
    <!--            app:key="feedback"-->
    <!--            app:summary="@string/pref_feedback_send_desc"-->
    <!--            app:title="@string/pref_feedback_send_title" />-->

    <!--    </PreferenceCategory>-->

    <PreferenceCategory
        app:key="troubleshooting_category"
        app:title="@string/pref_category_title_troubleshooting">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            app:key="show_runtime_list"
            app:summary="@string/pref_troubleshooting_show_list_desc"
            app:title="@string/pref_troubleshooting_show_list_title" />
    </PreferenceCategory>

</PreferenceScreen>
